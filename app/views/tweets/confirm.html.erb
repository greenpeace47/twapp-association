<div class="panel-heading">
  <h2>確認</h2>
</div>

<h3>以下の内容で、投稿する。</h3>

<%= form_with(model: @tweet, url: tweets_path, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <%= form.hidden_field :user_id %>

  <p>本文:<%= @tweet.content %></p>
  <%= form.submit  "投稿する" , class: "btn btn-info" %>
<% end %>
  <p>　</p>

<%= form_with(model: @tweet, url: new_tweet_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit "もどる", name: 'back', class: "btn btn-default" %>
<% end %>
  <p>　</p>
